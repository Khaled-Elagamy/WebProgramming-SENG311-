@model IEnumerable<LAB3.Models.Employee>
@{
    Layout = ViewBag.Layout;
    ViewData["Title"] = "Index";
}
<h1>Employees</h1>
<hr />

<table class="table">
<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Position)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var employee in Model)
    {
        <tr>
                @Html.DisplayFor(modelItem => employee,"EmployeeListItem")
            <td>
                <item-link controller-name="Employee" action-name="Details" item-id="@employee.Id" display-text="Details"></item-link>|
                <item-link controller-name="Employee" action-name="Edit" item-id="@employee.Id" display-text="Edit"></item-link>|
                <item-link controller-name="Employee" action-name="Update" item-id="@employee.Id" display-text="Update"></item-link>|
            </td>
        </tr>
    }
</tbody>
</table>